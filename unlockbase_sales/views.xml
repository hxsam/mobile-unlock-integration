<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
    <record model="ir.ui.view" id="view_pos_pos_form_unlockbase_sales">
        <field name="name">unlockbase_sales.pos.order.form.view.inherit</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"></field>
        <field name="arch" type="xml">
            <xpath expr="//group/field[@name='fiscal_position_id']" position="after">
                <field name="unlockbase_order_state"/>
            </xpath>
            <xpath expr="//header/field[@name='state']" position="before">
                <button name="action_place_order" string="Place unlock order" class="oe_highlight" type="object" context="{'pos_session_id' : session_id}"/>
            </xpath>
            <xpath expr="//notebook/page[last()]" position="after">
                <page id="unlockbase_mobile_data" string="Unlock">
                    <group string="Mobile unlock data">
                        <field name="IMEI"/>
                        <field name="email"/>
                        <field name="unlockbase_network" attrs="{'invisible': [('unlockbase_network', 'in', ['', None, 'None'])]}"/>
                        <field name="unlockbase_mobile" attrs="{'invisible': [('unlockbase_mobile', 'in', ['', None, 'None'])]}"/>
                        <field name="unlockbase_provider" attrs="{'invisible': [('unlockbase_provider', 'in', ['', None, 'None'])]}"/>
                        <field name="unlockbase_pin" attrs="{'invisible': [('unlockbase_pin', 'in', ['', None, 'None'])]}"/>
                        <field name="unlockbase_kbh" attrs="{'invisible': [('unlockbase_kbh', 'in', ['', None, 'None'])]}"/>
                        <field name="unlockbase_mep" attrs="{'invisible': [('unlockbase_mep', 'in', ['', None, 'None'])]}"/>
                        <field name="unlockbase_prd" attrs="{'invisible': [('unlockbase_prd', 'in', ['', None, 'None'])]}"/>
                        <field name="unlockbase_sn" attrs="{'invisible': [('unlockbase_sn', 'in', ['', None, 'None'])]}"/>
                        <field name="unlockbase_secro" attrs="{'invisible': [('unlockbase_secro', 'in', ['', None, 'None'])]}"/>
                        <field name="unlockbase_reference" attrs="{'invisible': [('unlockbase_reference', 'in', ['', None, 'None'])]}"/>
                        <field name="unlockbase_servicetag" attrs="{'invisible': [('unlockbase_servicetag', 'in', ['', None, 'None'])]}"/>
                        <field name="unlockbase_icloudemail" attrs="{'invisible': [('unlockbase_icloudemail', 'in', ['', None, 'None'])]}"/>
                        <field name="unlockbase_icloudphone" attrs="{'invisible': [('unlockbase_icloudphone', 'in', ['', None, 'None'])]}"/>
                        <field name="unlockbase_icloududid" attrs="{'invisible': [('unlockbase_icloududid', 'in', ['', None, 'None'])]}"/>
                        <field name="unlockbase_type" attrs="{'invisible': [('unlockbase_type', 'in', ['', None, 'None'])]}"/>
                        <field name="unlockbase_locks" attrs="{'invisible': [('unlockbase_locks', 'in', ['', None, 'None', 0 , '0'])]}"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</data>
</openerp>
